<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_on_primary_disabled">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dots"
        android:layout_marginBottom="0dp">

    </androidx.viewpager.widget.ViewPager>

    <ImageButton
        android:id="@+id/btBack"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_below="@+id/viewPager"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/tutorial_flecha_izquierda"
       android:visibility="gone"
        app:rippleColor="#FFFFFF" />

    <ImageButton
        android:id="@+id/btNext"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_below="@+id/viewPager"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="12dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="34dp"
        android:background="@drawable/tutorial_flecha_derecha"
        android:textColorHighlight="@color/button_color"
        android:textColorLink="@color/button_color"
        app:rippleColor="@color/button_color" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        app:tabGravity="center"
        app:tabIndicatorHeight="0dp">

    </com.google.android.material.tabs.TabLayout>

</RelativeLayout>