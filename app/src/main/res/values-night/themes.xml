<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InfinityCrop" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/button_color</item> <!-- color de la aplicacion -->
        <!-- color de la par -->
        <item name="colorPrimaryVariant">@color/header_mobile</item> <!-- color oscuro de la app -->
        <item name="colorOnPrimary">@color/white</item> <!-- color que tiene que destacar -->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnSecondary</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>
    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>

    <!-- button style -->
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/GrayButtonThemeOverlay</item>
    </style>
    <style name="GrayButtonThemeOverlay">
        <item name="colorPrimary">@color/shimmer_loader_color</item>
    </style>
    <!-- FIN -> button style -->
    <!-- on button style -->
    <style name="OnButtonStyle" parent="Widget.MaterialComponents.Button.Icon">
        <item name="materialThemeOverlay">@style/OnButtonThemeOverlay</item>
    </style>
    <style name="OnButtonThemeOverlay">
        <item name="colorPrimary">@color/button_color</item>
        <item name="background">@drawable/button_primary</item>
        <item name="iconSize">28dp</item>
    </style>
    <!-- FIN -> on button style -->
    <!-- off button style -->
    <style name="OffButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="materialThemeOverlay">@style/OffButtonThemeOverlay</item>
    </style>
    <style name="OffButtonThemeOverlay">
        <item name="colorPrimary">@color/button_color</item>
        <item name="background">@drawable/button_secondary</item>
        <item name="iconSize">28dp</item>
    </style>
    <!-- FIN -> off button style -->

    <style name="Widget.MaterialComponents.Button.IconOnly">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">12dp</item>
        <item name="android:minHeight">12dp</item>
        <item name="iconGravity">textStart</item>
    </style>
</resources>